        shadowSize: [41, 41]
    });

    const markerThies = L.marker([14.86667, -16.86667], { icon }).bindPopup('<h1>Thies</h1> PASTEF 10</br> BBY  1</br>PDS 2 </br>REWMI 2</br>AAR SENEGAL 2');
